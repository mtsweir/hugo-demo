{
	"extends": "stylelint-config-standard",
	"customSyntax": "postcss-scss",
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"alpha-value-notation": "number",
		"at-rule-empty-line-before": null,
		"at-rule-no-unknown": [true, {
			"ignoreAtRules": [
				"each",
				"else",
				"extend",
				"function",
				"forward",
				"if",
				"import",
				"include",
				"mixin",
				"return",
				"use",
				"warn"
			]
		}],
		"color-function-notation": "legacy",
		"color-hex-length": "long",
		"color-named": ["never", {
			"ignore": [
				"inside-function"
			]
		}],
		"comment-empty-line-before": "always",
		"declaration-empty-line-before": "never",
		"font-family-name-quotes": "always-unless-keyword",
		"function-no-unknown": [true, {
			"ignoreFunctions": [
				"/math.*/",
				"map-get",
				"zlevel"
			]
		}],
		"function-url-quotes": "always",
		"indentation": "tab",
		"keyframes-name-pattern": null,
		"max-empty-lines": 3,
		"max-line-length" : 150,
		"max-nesting-depth": 4,
		"no-descending-specificity": null,
		"no-duplicate-selectors": null,
		"no-invalid-position-at-import-rule": null,
		"number-leading-zero": "always",
		"property-no-vendor-prefix": true,
		"selector-attribute-quotes": "always",
		"selector-class-pattern": null,
		"selector-id-pattern": null,
		"selector-max-compound-selectors": 4,
		"selector-no-vendor-prefix": null,
		"shorthand-property-no-redundant-values": true,
		"string-quotes": null,
		"unit-allowed-list": ["%", "ch", "deg", "dpi", "dppx", "em", "fr", "ms", "rem", "pt", "px", "s", "vh", "vw"],
		"value-no-vendor-prefix": true,

		"value-keyword-case": [
			"lower",
			{
					"camelCaseSvgKeywords": true
			}
		],

		"order/properties-order": [
			"position",
			"top",
			"bottom",
			"left",
			"right",
			"z-index",

			"box-sizing",
			"clear",
			"display",
			"flex",
			"flex-basis",
			"flex-direction",
			"flex-flow",
			"flex-grow",
			"flex-shrink",
			"flex-wrap",
			"float",
			"grid",
			"align-content",
			"align-items",
			"align-self",
			"justify-content",
			"justify-items",
			"justify-self",
			"gap",
			"order",

			"width",
			"height",
			"min-width",
			"min-height",
			"max-width",
			"max-height",
			"zoom",

			"margin",
			"margin-top",
			"margin-bottom",
			"margin-left",
			"margin-right",
			"padding",
			"padding-top",
			"padding-bottom",
			"padding-left",
			"padding-right",
			"page-break-after",
			"page-break-before",

			"backface-visibility",
			"background",
			"background-color",
			"background-image",
			"background-position",
			"background-repeat",
			"background-size",
			"border",
			"border-top",
			"border-bottom",
			"border-left",
			"border-right",
			"border-color",
			"border-style",
			"border-width",
			"border-top-color",
			"border-top-style",
			"border-top-width",
			"border-bottom-color",
			"border-bottom-style",
			"border-bottom-width",
			"border-left-color",
			"border-left-style",
			"border-left-width",
			"border-right-color",
			"border-right-style",
			"border-right-width",
			"border-radius",
			"border-top-left-radius",
			"border-top-right-radius",
			"border-bottom-left-radius",
			"border-bottom-right-radius",
			"box-shadow",
			"filter",
			"opacity",
			"outline",
			"overflow",
			"overflow-wrap",
			"overflow-x",
			"overflow-y",
			"visibility",

			"color",
			"font",
			"font-family",
			"font-size",
			"font-style",
			"font-variant",
			"font-weight",
			"letter-spacing",
			"line-height",
			"list-style",
			"text-align",
			"text-decoration",
			"text-indent",
			"text-overflow",
			"text-shadow",
			"text-transform",
			"vertical-align",
			"white-space",
			"word-break",
			"word-wrap",

			"content",
			"cursor",
			"pointer-events",
			"speak",
			"user-select",

			"animation",
			"animation-delay",
			"animation-direction",
			"animation-duration",
			"animation-name",
			"transform",
			"transform-origin",
			"transition",
			"transition-delay",
			"transition-duration",
			"transition-property"
		]
	}
}
